<div class="row">

  <%= form_for @contact do |f| %>
  
  <div class="container"> 
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

       <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control'  %>
       </div>

       <div class="form-group">
        <%= f.label :comments %>
        <%= f.text_field :comments, class: 'form-control'  %>
      </div>
  </div>
  <% end%>
   
</div>  